<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSave"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:text="Guardar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <Button
        android:id="@+id/btnMostrar"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="161dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:text="@string/mapa" />

    <EditText
        android:id="@+id/edithLatitud"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/gps_signal_20px"
        android:hint=" Latitud : "
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="#0B0A0A"
        android:textColorHint="#535050"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelLatitud"
        android:layout_width="369dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="473dp"
        android:text="@string/latitud"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edithLongitud"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="321dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/latitude_20px"
        android:hint=" Longitud : "
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="#0B0A0A"
        android:textColorHint="#535050"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="378dp"
        android:text="@string/longitud"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelPlace"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="580dp"
        android:text="@string/nombre"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edithPlace"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="12dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="525dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/name_20px"
        android:hint="Nombre: "
        android:padding="12dp"
        android:textColor="#0B0A0A"
        android:textColorHint="#535050"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@color/purple_500" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Ejemplo Firebase"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>